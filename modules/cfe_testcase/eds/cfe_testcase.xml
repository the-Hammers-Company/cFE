<PackageFile xmlns="http://www.ccsds.org/schema/sois/seds">
  <Package name="CFE_TEST" shortDescription="CFE Functional Test (FT) Application Package">

    <DataTypeSet>

      <ContainerDataType name="TestPayload64" shortDescription="A 64-bit payload (worst case for alignment)">
        <EntryList>
          <Entry name="Value" type="BASE_TYPES/uint64" shortDescription="Example Payload" />
        </EntryList>
      </ContainerDataType>

      <ContainerDataType name="TestPayload32" shortDescription="A 32-bit payload (most common case for alignment)">
        <EntryList>
          <Entry name="Value" type="BASE_TYPES/uint32" shortDescription="Example Payload" />
        </EntryList>
      </ContainerDataType>

      <ContainerDataType name="TestTable" shortDescription="Example Table Definition">
        <EntryList>
          <Entry name="Int1" type="BASE_TYPES/uint16" shortDescription="Example integer 1" />
          <Entry name="Int2" type="BASE_TYPES/uint16" shortDescription="Example integer 2" />
        </EntryList>
      </ContainerDataType>

      <ContainerDataType name="TestCmdMessage32" baseType="CFE_HDR/CommandHeader" shortDescription="A simple command message with a 32 bit payload">
        <EntryList>
          <Entry name="Payload" type="TestPayload32" />
        </EntryList>
      </ContainerDataType>

      <ContainerDataType name="TestTlmMessage32" baseType="CFE_HDR/TelemetryHeader" shortDescription="A simple telemetry message with a 32 bit payload">
        <EntryList>
          <Entry name="Payload" type="TestPayload32" />
        </EntryList>
      </ContainerDataType>

      <ContainerDataType name="TestCmdMessage64" baseType="CFE_HDR/CommandHeader" shortDescription="A simple command message with a 64 bit payload">
        <EntryList>
          <Entry name="Payload" type="TestPayload64" />
        </EntryList>
      </ContainerDataType>

      <ContainerDataType name="TestTlmMessage64" baseType="CFE_HDR/TelemetryHeader" shortDescription="A simple telemetry message with a 64 bit payload">
        <EntryList>
          <Entry name="Payload" type="TestPayload64" />
        </EntryList>
      </ContainerDataType>

    </DataTypeSet>

    <ComponentSet>
      <Component name="Application">
        <RequiredInterfaceSet>
          <Interface name="TestTable" shortDescription="Table interface" type="CFE_TBL/Table">
            <GenericTypeMapSet>
              <GenericTypeMap name="TableDataType" type="TestTable" />
            </GenericTypeMapSet>
          </Interface>
          <Interface name="Test1" shortDescription="Used for GetAddresses/ReleaseAddresses" type="CFE_TBL/Table">
            <GenericTypeMapSet>
              <GenericTypeMap name="TableDataType" type="TestTable" />
            </GenericTypeMapSet>
          </Interface>
          <Interface name="Test2" shortDescription="Used for GetAddresses/ReleaseAddresses" type="CFE_TBL/Table">
            <GenericTypeMapSet>
              <GenericTypeMap name="TableDataType" type="TestTable" />
            </GenericTypeMapSet>
          </Interface>
          <Interface name="Test3" shortDescription="Used for GetAddresses/ReleaseAddresses" type="CFE_TBL/Table">
            <GenericTypeMapSet>
              <GenericTypeMap name="TableDataType" type="TestTable" />
            </GenericTypeMapSet>
          </Interface>
          <Interface name="CMD" shortDescription="Software bus telecommand interface" type="CFE_SB/Telecommand">
            <GenericTypeMapSet>
              <GenericTypeMap name="TelecommandDataType" type="TestCmdMessage64" />
            </GenericTypeMapSet>
          </Interface>
          <Interface name="HK_TLM" shortDescription="Software bus housekeeping telemetry interface" type="CFE_SB/Telemetry">
            <GenericTypeMapSet>
              <GenericTypeMap name="TelemetryDataType" type="TestTlmMessage64" />
            </GenericTypeMapSet>
          </Interface>
        </RequiredInterfaceSet>
        <Implementation>
          <VariableSet>
            <Variable type="BASE_TYPES/uint16" readOnly="true" name="CmdTopicId" initialValue="${CFE_MISSION/TEST_CMD_TOPICID}" />
            <Variable type="BASE_TYPES/uint16" readOnly="true" name="TlmTopicId" initialValue="${CFE_MISSION/TEST_HK_TLM_TOPICID}" />
          </VariableSet>
          <ParameterMapSet>
            <ParameterMap interface="CMD" parameter="TopicId" variableRef="CmdTopicId" />
            <ParameterMap interface="HK_TLM" parameter="TopicId" variableRef="TlmTopicId" />
          </ParameterMapSet>
        </Implementation>
      </Component>
    </ComponentSet>

  </Package>
</PackageFile>
